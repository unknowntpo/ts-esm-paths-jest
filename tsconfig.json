{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "module": "nodenext",
        "moduleResolution": "NodeNext",
        "outDir": "dist",
        "baseUrl": "./",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "paths": {
            "src/*": [
                "src/*"
            ]
        },
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}